<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teams"
        android:textSize="@dimen/activity_header_text"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/firstCharacter"
            android:layout_width="@dimen/team_character_size"
            android:layout_height="@dimen/team_character_size"
            android:background="@color/white"
            android:src="@drawable/villager_dmged"/>
        <ImageView
            android:id="@+id/secondCharacter"
            android:layout_width="@dimen/team_character_size"
            android:layout_height="@dimen/team_character_size"
            android:background="@color/white"
            android:src="@drawable/archer_dmged"/>
        <ImageView
            android:id="@+id/thirdCharacter"
            android:layout_width="@dimen/team_character_size"
            android:layout_height="@dimen/team_character_size"
            android:background="@color/white"
            android:src="@drawable/knight_dmged"/>
        <ImageView
            android:id="@+id/forthCharacter"
            android:layout_width="@dimen/team_character_size"
            android:layout_height="@dimen/team_character_size"
            android:background="@color/white"
            android:src="@drawable/wizard_dmged"/>
        <ImageView
            android:id="@+id/fifthCharacter"
            android:layout_width="@dimen/team_character_size"
            android:layout_height="@dimen/team_character_size"
            android:background="@color/white"
            android:src="@drawable/potion"/>
    </LinearLayout>

</LinearLayout>