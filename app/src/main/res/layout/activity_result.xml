<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".activities.ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:orientation="vertical">-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_header"
            android:text="@string/dummy"
            android:textSize="@dimen/post_game_header"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:id="@+id/result_image"
            android:src="@drawable/win_game"
            android:layout_below="@id/result_header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_splash"
            android:text="@string/backButton"
            android:textSize="@dimen/post_game_back_button"
            android:layout_below="@id/result_image"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
