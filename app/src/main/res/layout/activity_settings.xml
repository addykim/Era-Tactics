<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/settingsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_header_text"
            android:text="@string/settings"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/toggle_margin"/>

        <TextView
            android:id="@+id/musicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music"
            android:textSize="@dimen/options_text"
            android:layout_below="@id/settingsHeader"
            android:layout_margin="@dimen/toggle_margin" />

        <ToggleButton
            android:id="@+id/musicToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/musicText"
            android:layout_alignLeft="@+id/vibrationToggle"
            android:layout_alignStart="@+id/vibrationToggle" />

        <TextView
            android:id="@+id/sfxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/options_text"
            android:text="@string/soundFx"
            android:layout_below="@id/musicText"
            android:layout_margin="@dimen/toggle_margin"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/sfxToggle"
            android:layout_gravity="center_horizontal|top"
            android:layout_above="@+id/vibrationText"
            android:layout_alignRight="@+id/musicToggle"
            android:layout_alignEnd="@+id/musicToggle" />


        <TextView
            android:id="@+id/vibrationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/options_text"
            android:text="@string/vibration"
            android:layout_below="@id/sfxText"
            android:layout_margin="@dimen/toggle_margin"/>

        <ToggleButton
            android:id="@+id/vibrationToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignTop="@+id/vibrationText"
            android:layout_alignRight="@+id/leftHandedHelper"
            android:layout_alignEnd="@+id/leftHandedHelper" />

        <TextView
            android:id="@+id/leftHandedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/options_text"
            android:text="@string/left_handed"
            android:layout_below="@id/vibrationText"
            android:layout_margin="@dimen/toggle_margin"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/leftHandedToggle"
            android:layout_gravity="center_horizontal|top"
            android:layout_above="@+id/leftHandedHelper"
            android:layout_alignRight="@+id/leftHandedHelper"
            android:layout_alignEnd="@+id/leftHandedHelper" />

        <TextView
            android:id="@+id/leftHandedHelper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_handed_helper"
            android:textSize="@dimen/helper_text"
            android:layout_below="@id/leftHandedText"
            android:layout_marginLeft="@dimen/toggle_margin"
            android:layout_marginRight="@dimen/toggle_margin"/>
    </RelativeLayout>

</FrameLayout>
