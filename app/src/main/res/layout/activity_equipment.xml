<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground">

    <TextView
        android:id="@+id/equipment_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equipment"
        android:textSize="@dimen/activity_header_text"/>

    <ImageView
        android:id="@+id/equipment_hat"
        android:layout_width="@dimen/equipment_display_size"
        android:layout_height="@dimen/equipment_display_size"
        android:layout_margin="@dimen/equipment_margin"
        android:src="@drawable/fireball"

        android:background="@color/white"
        android:layout_above="@+id/equipment_character"
        android:layout_marginBottom="56dp" />

    <TextView
        android:id="@+id/equipment_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummyCharacterName"
        android:textSize="@dimen/equipment_header_text"
        android:layout_below="@+id/equipment_header"
        android:layout_toRightOf="@+id/equipment_hat"
        android:layout_toEndOf="@+id/equipment_hat" />

    <LinearLayout
        android:id="@+id/equipment_atk_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equipment_character_name"
        android:layout_alignLeft="@+id/equipment_character_name"
        android:layout_alignStart="@+id/equipment_character_name">

        <TextView
            android:id="@+id/equipment_character_atk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_normal_text"
            android:text="@string/equipmentAttack" />

        <TextView
            android:id="@+id/equipment_character_atk_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_normal_text"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:layout_toRightOf="@+id/equipment_character_atk" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/equipment_def_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equipment_atk_layout"
        android:layout_alignLeft="@+id/equipment_character_name"
        android:layout_alignStart="@+id/equipment_character_name">

        <TextView
            android:id="@+id/equipment_character_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_normal_text"
            android:text="@string/equipmentDefense" />

        <TextView
            android:id="@+id/equipment_character_def_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_normal_text"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:layout_toRightOf="@+id/equipment_character_def" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/equipment_mag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equipment_def_layout"
        android:layout_alignLeft="@+id/equipment_character_name"
        android:layout_alignStart="@+id/equipment_character_name">

        <TextView
            android:id="@+id/equipment_character_mag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_normal_text"
            android:text="@string/equipmentMagic" />

        <TextView
            android:id="@+id/equipment_character_mag_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_normal_text"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:layout_toRightOf="@+id/equipment_character_mag" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/equipment_res_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equipment_mag_layout"
        android:layout_alignLeft="@+id/equipment_character_name"
        android:layout_alignStart="@+id/equipment_character_name">

        <TextView
            android:id="@+id/equipment_character_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_normal_text"
            android:text="@string/equipmentResistence" />

        <TextView
            android:id="@+id/equipment_character_res_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_normal_text"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:layout_toRightOf="@+id/equipment_character_res" />

    </LinearLayout>

    <ImageView
        android:id="@+id/equipment_left"
        android:layout_width="@dimen/equipment_display_size"
        android:layout_height="@dimen/equipment_display_size"
        android:src="@drawable/fireball"
        android:background="@color/white"
        android:layout_below="@+id/equipment_hat"
        android:layout_toLeftOf="@+id/equipment_character"
        android:layout_alignLeft="@+id/equipment_hat"
        android:layout_alignStart="@+id/equipment_hat" />

    <ImageView
        android:id="@+id/equipment_right"
        android:layout_width="@dimen/equipment_display_size"
        android:layout_height="@dimen/equipment_display_size"
        android:src="@drawable/fireball"
        android:background="@color/white"
        android:layout_above="@+id/equipment_skills_header"
        android:layout_toRightOf="@+id/equipment_character" />

    <ImageView
        android:id="@+id/equipment_armor"
        android:layout_width="@dimen/equipment_display_size"
        android:layout_height="@dimen/equipment_display_size"
        android:src="@drawable/fireball"
        android:background="@color/white"
        android:layout_alignTop="@+id/equipment_skills_header"
        android:layout_alignRight="@id/equipment_right"/>

    <ImageView
        android:id="@+id/equipment_character"
        android:layout_width="@dimen/equipment_display_size"
        android:layout_height="@dimen/equipment_display_size"
        android:src="@drawable/wizard_dmged"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/equipment_skills_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skills"
        android:textSize="@dimen/equipment_header_text"
        android:layout_below="@+id/equipment_left"
        android:layout_alignLeft="@+id/equipment_left"
        android:layout_alignStart="@+id/equipment_left"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/equipment_skills_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummySkill"
        android:textSize="@dimen/equipment_normal_text"
        android:layout_below="@+id/equipment_skills_header"
        android:layout_alignLeft="@id/equipment_skills_header"/>

    <TextView
        android:id="@+id/equipment_leader_skills_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equipmentLeaderSkillLabel"
        android:textSize="@dimen/equipment_header_text"
        android:layout_below="@+id/equipment_skills_text"
        android:layout_alignLeft="@+id/equipment_skills_text"
        android:layout_alignStart="@+id/equipment_skills_text" />

    <TextView
        android:id="@+id/equipment_leader_skills_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummyLeaderSkill"
        android:textSize="@dimen/equipment_normal_text"
        android:layout_below="@+id/equipment_leader_skills_header"
        android:layout_alignLeft="@+id/equipment_leader_skills_header"
        android:layout_alignStart="@+id/equipment_leader_skills_header" />


</RelativeLayout>